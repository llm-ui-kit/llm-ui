---
import PresentationLayout from "@/layouts/PresentationLayout.astro";
import BuiltWith from "@/components/presentation/BuiltWith.astro";
import { ExampleTabs } from "@/components/examples/Example";

const example = `## Header 2\n\n\`\`\`python\nprint("Hello llm-ui")\n\`\`\`
- *italics*
- **bold**
- [link](https://llm-ui.com)
- ~~strikethrough~~
`;
---

<PresentationLayout title="LLM UI">
  <ExampleTabs
    client:load
    className="min-w-[650px]"
    example={example}
    tabs={["raw", "markdown", "llm-ui"]}
    showPlayPause
    loop={false}
    throttle="buffered"
    options={{
      delayMultiplier: 2,
      autoStart: false,
      tokenCharsProbabilities: [{ tokenChars: 1, prob: 1 }],
    }}
  />
  <BuiltWith />
</PresentationLayout>
