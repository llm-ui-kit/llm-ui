---
import { Button, buttonVariants } from "@/components/ui/Button";
import { siteConfig } from "@/config/site";
import MainLayout from "@/layouts/MainLayout.astro";
import WaitList from "@/components/WaitList.astro";
import { HomePageExample } from "@/components/HomePageExample";
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";
import HeaderSection from "@/components/HeaderSection.astro";
import { ModelCards } from "@/components/ModelCards";
import { marketingConfig } from "@/config/marketing";
---

<MainLayout title="llm-ui | React components for LLMs">
  <section class="bg-background-200 space-y-6 pb-12 pt-16 lg:py-28">
    <div
      class="container flex max-w-[64rem] flex-col items-center gap-6 text-center"
    >
      <h1
        class="font-heading text-balance text-4xl font-bold !leading-[1.1] sm:text-5xl md:text-6xl lg:text-7xl"
      >
        <span class="text-gradient_indigo-purple">React components</span><br /> for
        <span class="text-gradient_indigo-purple">LLMs</span>
      </h1>

      <p
        class="text-muted-foreground mb-3 max-w-[42rem] text-balance leading-normal sm:text-xl sm:leading-8"
      >
        {"Customizable React components to help render your LLM's outputs."}
      </p>

      <div class="flex justify-center space-x-2 md:space-x-4">
        <a
          href="/docs/getting-started/"
          class={cn(buttonVariants({ size: "lg" }))}
        >
          Get Started
        </a>
        <a
          href={siteConfig.links.github}
          target="_blank"
          rel="noreferrer"
          class={cn(buttonVariants({ variant: "outline", size: "lg" }), "px-4")}
        >
          <Icon name="github" class="mr-2 size-5" />
          Github
        </a>
      </div>
    </div>
  </section>

  <section id="example" class="bg-background-200">
    <div class="container flex min-h-[500px] max-w-[80rem] flex-col space-y-6">
      <HomePageExample client:only />
    </div>
  </section>

  <section
    id="markdown"
    class="bg-background-200 py-8 text-center md:py-12 lg:py-24"
  >
    <div class="container space-y-6">
      <HeaderSection
        title="Advanced Markdown"
        subtitle="Markdown is rendered from left to right, markdown syntax is never visible"
      />
    </div>
  </section>
  <section
    id="codeblock"
    class="bg-background-200 py-8 text-center md:py-12 lg:py-24"
  >
    <div class="container space-y-6">
      <HeaderSection title="Code blocks">
        <Fragment slot="subtitle">
          Beautiful syntax highlighting with <a
            class="text-primary"
            target="_blank"
            href="https://shiki.style/">Shiki</a
          >. Backticks are never visible.</Fragment
        >
      </HeaderSection>
    </div>
  </section>
  <section
    id="codeblock"
    class="bg-background-200 py-8 text-center md:py-12 lg:py-24"
  >
    <div class="container space-y-6">
      <HeaderSection
        title="Custom components"
        subtitle="Render your own custom 'blocks' based on the model's output"
      />
    </div>
  </section>

  <section
    id="all-llms"
    class="bg-background-200 py-8 text-center md:py-12 lg:py-24"
  >
    <div class="container space-y-6">
      <HeaderSection
        title="Works with any model"
        subtitle="llm-ui operates on LLM output strings, so it works with any LLM model."
      />
      <ModelCards models={marketingConfig.models} />
      <Button variant="secondary" size="lg" className="px-4">
        <a href="/" class="flex items-center gap-2">
          <span>Read the docs</span>
          <Icon name="lucide:arrow-up-right" class="size-4" />
        </a>
      </Button>
    </div>
  </section>

  <section id="waitlist" class="bg-background-200 py-8 md:py-12 lg:py-24">
    <div class="container space-y-6">
      <WaitList />
    </div>
  </section>
</MainLayout>
