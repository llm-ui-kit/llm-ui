{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@llm-ui/react/*": ["packages/react/src/*"],
      "@llm-ui/markdown/*": ["packages/markdown/src/*"],
      "@llm-ui/code/*": ["packages/code/src/*"],
      "@llm-ui/json/*": ["packages/json/src/*"],
      "@llm-ui/shared/*": ["packages/shared/src/*"]
    }
  }
}
