{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "checkJs": true,
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "baseUrl": "../..",
    "paths": {
      "@llm-ui/react/*": ["packages/react/src/*"],
      "@llm-ui/markdown/*": ["packages/markdown/src/*"],
      "@llm-ui/code/*": ["packages/code/src/*"],
      "@llm-ui/json/*": ["packages/json/src/*"],
      "@llm-ui/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
